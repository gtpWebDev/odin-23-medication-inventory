<h1><%= title %>: <strong> <%= dose._id %> </strong></h1>

<% if (dose_Regiments.length) { %>

<p>
  <strong
    >Delete the following regimens before attempting to delete this
    dose.</strong
  >
</p>

<div style="margin-left: 20px; margin-top: 20px">
  <h4>Regimens</h4>
  <dl>
    <% for (const regimen of dose_Regiments) { %>
    <dt>
      <a href="<%= regimen.url %>"><%= regimen.summary %></a>
    </dt>
    <% } %>
  </dl>
</div>

<% } else { %>

<p>Do you really want to delete this dose?</p>

<form method="POST">
  <div class="form-group">
    <input
      class="form-control"
      type="hidden"
      id="doseid"
      name="doseid"
      value="<%= dose._id %>"
    />

    <button class="btn btn-primary" type="submit">Delete</button>
  </div>
</form>

<% } %>

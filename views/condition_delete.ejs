<h1><%= title %>: <strong> <%= condition.name %> </strong></h1>

<% if (condition_patients.length || condition_medications.length) { %> <% if
(condition_patients.length) { %>

<p>
  <strong
    >Delete the following patients before attempting to delete this
    condition.</strong
  >
</p>

<div style="margin-left: 20px; margin-top: 20px">
  <h4>Patients</h4>
  <dl>
    <% for (const patient of condition_patients) { %>
    <dt>
      <a href="<%= patient.url %>"><%= patient.name %></a>
    </dt>
    <% } %>
  </dl>
</div>

<% } %> <% if (condition_medications.length) { %>

<p>
  <strong
    >Delete the following medications before attempting to delete this
    condition.</strong
  >
</p>

<div style="margin-left: 20px; margin-top: 20px">
  <h4>Medications</h4>
  <dl>
    <% for (const medication of condition_medications) { %>
    <dt>
      <a href="<%= medication.url %>"><%= medication.name %></a>
    </dt>
    <% } %>
  </dl>
</div>

<% } %> <% } else { %>

<p>Do you really want to delete this condition?</p>

<form method="POST">
  <div class="form-group">
    <input
      class="form-control"
      type="hidden"
      id="conditionid"
      name="conditionid"
      value="<%= condition._id %>"
    />

    <button class="btn btn-primary" type="submit">Delete</button>
  </div>
</form>

<% } %>

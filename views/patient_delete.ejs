<h1><%= title %>: <strong> <%= patient.name %> </strong></h1>

<% if (patient_prescriptions.length) { %>

<p>
  <strong
    >Delete the following prescriptions before attempting to delete this
    patient.</strong
  >
</p>

<div style="margin-left: 20px; margin-top: 20px">
  <h4>Prescriptions</h4>
  <dl>
    <% for (const prescription of patient_prescriptions) { %>
    <dt>
      <%= prescription.patient.name%> - <%= prescription.medication.name%>, <%=
      prescription.regimen.summary%> -
      <a href="<%= prescription.url %>">Detail</a>
    </dt>
    <% } %>
  </dl>
</div>

<% } else { %>

<p>Do you really want to delete this patient?</p>

<form method="POST">
  <div class="form-group">
    <input
      class="form-control"
      type="hidden"
      id="patientid"
      name="patientid"
      value="<%= patient._id %>"
    />
    <button class="btn btn-primary" type="submit">Delete</button>
  </div>
</form>

<% } %>
